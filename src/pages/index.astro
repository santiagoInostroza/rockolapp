---
import Layout from '../layouts/Layout.astro';

import BenefitsSection from '../sections/BenefitsSection.astro';
import FooterSection from '../sections/FooterSection.astro';
import ForVenueSection from '../sections/ForVenueSection.astro';
import HeaderSection from '../sections/HeaderSection.astro';
import HeroSection from '../sections/HeroSection.astro';
import HowItWorksSection from '../sections/HowItWorksSection.astro';
import PricingSection from '../sections/PricingSection.astro';
import TestimonialsSection from '../sections/TestimonialsSection.astro';
import WhatIsSection from '../sections/WhatIsSection.astro';
---

<Layout title="Rockolapp">
    <header>
        <HeaderSection />
    </header>
	<main class="grid gap-48 grid-cols-1 mt-16">
        <HeroSection />
        <WhatIsSection />
        <HowItWorksSection />
        
        <ForVenueSection />
        <BenefitsSection />
        <PricingSection />
        <TestimonialsSection />
	</main>
        <FooterSection />
</Layout>

<style>

* {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
}

body {
    font-family: Arial, sans-serif;
    line-height: 1.6;
}

.header {
    background: #333;
    color: #fff;
    padding: 15px;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.nav-links {
    list-style: none;
    display: flex;
}

.nav-links li {
    margin: 0 15px;
}

.nav-links a {
    color: #fff;
    text-decoration: none;
}

.cta-buttons {
    display: flex;
}

.btn {
    background: #ff4081;
    color: #fff;
    padding: 10px 15px;
    border-radius: 5px;
    text-decoration: none;
    margin-left: 10px;
}

.hero-section {
    text-align: center;
    padding: 50px 20px;
    background: #f4f4f4;
}

.how-it-works-section, .for-venues-section, .for-users-section, .testimonials-section {
    padding: 40px 20px;
    background: #fff;
    margin: 20px 0;
}

.steps {
    display: flex;
    justify-content: space-around;
}

.step {
    text-align: center;
    padding: 20px;
}

.footer {
    text-align: center;
    padding: 20px;
    background: #333;
    color: #fff;
}

.footer-links {
    margin-top: 10px;
}

.footer-links a {
    color: #ff4081;
    margin: 0 10px;
}
</style>
